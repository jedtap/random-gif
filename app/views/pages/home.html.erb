<div class="flex flex-col">

    <div class="w-auto border-2 border-purple-500 p-4" >Header</div>

    <%# two cols %>
    <div class="w-auto p-4
    flex justify-center gap-4">
        <%# col 1 %>
        <div class="flex flex-col gap-2 w-1/2"> 
            <div class="flex gap-2 justify-end">
                <div class="w-11/12 border-2 border-green-500"> 
                    <%# Search field %>
                    <%= form_with(model: Search.new ) do |form| %> 
                        <%= form.text_field :query, placeholder: "Search a GIF!" %>
                        <%= form.submit type: :hidden %>
                    <% end %>
                </div>
                
                <%# Go to download's path %>
                <div class="w-1/12 border-2 border-green-600"> <%= link_to(pages_download_path) do %>  <i class="fa-solid fa-user"></i> <% end %></div>
            </div>

            <%# History box %>
            <div class="w-auto border-2 border-green-300" style="height: auto;">
                
                <% @recent.each do |q|  %>
                    <div id="<%= dom_id q %>">
                        <%= q.created_at.to_s(:short) %>: <%= q.query %>
                    </div>
                <% end %>
            </div>
        </div>

        <div class="w-1/2 flex justify-center" style="height: 400px;"> <img src='<%= @url %>' alt='eagle' class="w-auto"> </div>
    </div>

    <div class="w-auto border-2 border-purple-500 p-4">Footer</div>

</div>